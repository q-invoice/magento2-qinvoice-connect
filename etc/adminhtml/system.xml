<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="qinvoice" translate="label" sortOrder="1000">
            <label>Qinvoice Connect</label>
        </tab>
        <section id="invoice_options" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Qinvoice Configuration</label>
            <tab>qinvoice</tab>
            <resource>Qinvoice_Connect::config</resource>
            <group id="invoice" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Qinvoice</label>
                <field id="api_url" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API URL</label>    
                    <comment><![CDATA[e.g. https://app.q-invoice.com/api/xml/1.2/]]></comment>
                </field>
                <field id="api_username" translate="label" type="text" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Username</label>
                </field>
                <field id="api_password" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Password</label>
                </field>
                <field id="layout_code" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Layout Code</label>
                    <comment><![CDATA[Optional]]></comment>                
                </field>
                <field id="invoice_remark" translate="label" type="textarea" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Invoice remark</label>
                    <comment><![CDATA[e.g. Order #{order_id}.]]></comment>           
                </field>
                <field id="invoice_tag" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Invoice tag</label>
                    <comment><![CDATA[Optional. e.g. Your webshop name.]]></comment>                    
                </field>
                <field id="paid_remark" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Paid remark</label>
                    <comment><![CDATA[e.g. Your payment has been received.]]></comment>                    
                </field>
                <field id="invoice_trigger" translate="label" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Send invoice request on</label>
                    <source_model>\Qinvoice\Connect\Model\Config\Source\Trigger</source_model>
                    <comment><![CDATA[Select invoice trigger moment]]></comment>                
                </field>
                <field id="invoice_action" translate="label" type="select" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>After request</label>
                    <source_model>\Qinvoice\Connect\Model\Config\Source\Invoice</source_model>
                    <comment><![CDATA[Create invoice and send to customer?]]></comment>
                </field>
                <field id="save_relation" translate="label" type="select" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Save customer details</label>
                    <source_model>\Qinvoice\Connect\Model\Config\Source\Relation</source_model>
                    <comment><![CDATA[Save customer details to address book?]]></comment>        
                </field>
                <field id="calculation_method" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Calculation method</label>
                    <source_model>\Qinvoice\Connect\Model\Config\Source\Method</source_model>
                    <comment><![CDATA[Select leading price type]]></comment>                  
                </field>
                <field id="product_attributes" translate="label" type="multiselect" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Products attributes</label>
                    <source_model>\Qinvoice\Connect\Model\Config\Source\Attribute</source_model>
                    <comment><![CDATA[Select one or more attributes to show on product line]]></comment>
                </field>
                <field id="webshop_secret" translate="label" type="text" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Webshop secret</label>
                    <frontend_model>Qinvoice\Connect\Block\System\Config\Form\Field\Webshopsecret</frontend_model> 
                    <comment><![CDATA[Your secret key. Used for stock synchronisation.]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>
